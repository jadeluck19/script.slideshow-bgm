<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.slideshow-BGM" name="Slideshow with BGM" version="0.1.0" provider-name="dks">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Slideshow with BGM</summary>
    <description lang="en_GB">Play background music while slideshowing</description>
    <platform>all</platform>
    <license>GPL-3.0-only</license>
    <website>http://github.com/june3474/script.slideshow-BGM</website> <!-- may be omitted.  -->
    <email>june3474@gmail.com</email> <!-- may be omitted.  -->
    <source>http://github.com/june3474/script-slideshow-BGM</source>
    <news>
        [version 0.1.0] Initial version, compatible with kodi v18 Leia.
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart></fanart> <!-- optional -->
        <banner></banner> <!-- optional -->
        <clearlogo></clearlogo> <!-- optional  -->
        <screenshot></screenshot> <!-- optional, max 10  -->
    </assets>
  </extension>
</addon>
